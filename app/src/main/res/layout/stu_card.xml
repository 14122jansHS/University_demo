<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="@dimen/dimen32"
        android:background="@drawable/shadow_bg">

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/a2" />

        <com.egnify.University_demo.utils.p_MyCustomTextView_bold
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Sri Devi Kumar"
            android:textSize="21sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:orientation="horizontal"
            android:weightSum="1">

            <com.egnify.University_demo.utils.p_MyCustomTextView_regular
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="121AF0021"
                android:textSize="18sp" />

            <View
                android:layout_width="2dp"

                android:layout_height="match_parent"
                android:background="@color/primary_text" />

            <com.egnify.University_demo.utils.p_MyCustomTextView_regular
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="B.Tech   CSE  4-2"
                android:textSize="18sp" />
        </LinearLayout>
    </RelativeLayout>

    <com.github.siyamed.shapeimageview.CircularImageView
        android:id="@+id/fac_pic"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/place_holder2" />
</FrameLayout>
