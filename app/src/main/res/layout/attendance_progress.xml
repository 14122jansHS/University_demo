<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_holder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dimen8"
    app:cardElevation="@dimen/card_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.egnify.vignan.utils.p_MyCustomTextView_mbold
            android:id="@+id/sub_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen8"
            android:padding="@dimen/dimen8"
            android:singleLine="true"

            android:text="Subject_name"
            android:textColor="@color/primary_text"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.egnify.vignan.utils.p_MyCustomTextView_regular
                android:id="@+id/value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:paddingLeft="@dimen/dimen8"
                android:text="Attendance: 41/58"
                android:textColor="@color/secondary_text"
                android:textSize="14dp" />

            <com.egnify.vignan.utils.p_MyCustomTextView_regular
                android:id="@+id/percentage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingRight="@dimen/dimen8"
                android:text="80%"
                android:textColor="@color/secondary_text"
                android:textSize="14dp" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressbar1"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:max="100"
            android:padding="@dimen/dimen8" />
    </LinearLayout>
</android.support.v7.widget.CardView>