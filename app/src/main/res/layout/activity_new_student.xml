<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_fl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:fitsSystemWindows="true"
    tools:context="com.egnify.vignan.Activities.student">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/testwise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:background="@color/purpule"
            android:elevation="4dp">

            <RelativeLayout
                android:id="@+id/tool_bar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:orientation="horizontal"
                android:padding="@dimen/dimen8">

                <RelativeLayout
                    android:id="@+id/bar_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/back_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_arrow_left" />

                    <LinearLayout
                        android:id="@+id/icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="horizontal">

                        <ImageView

                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_clipboard_text" />

                        <com.egnify.vignan.utils.p_MyCustomTextView_mbold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="Attendance "
                            android:textColor="@color/white"
                            android:textSize="14sp" />
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>

            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_holder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tool_bar"
                android:layout_marginLeft="@dimen/dimen8"
                android:layout_marginRight="@dimen/dimen8"
                android:visibility="invisible"
                app:cardElevation="@dimen/card_elevation">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/dimen8"
                    android:paddingRight="@dimen/dimen8">

                    <com.egnify.vignan.utils.p_MyCustomTextView_regular
                        android:id="@+id/sub_namee2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="3dp"
                        android:padding="@dimen/dimen8"
                        android:text="Over All Attendance "
                        android:textColor="@color/primary_text"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"

                        android:background="@color/tabsScrollColor" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/anal_layer"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.248"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.egnify.vignan.utils.p_MyCustomTextView_bold
                            android:id="@+id/total_m"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/dimen8"
                            android:paddingRight="@dimen/dimen8"
                            android:text="0"
                            android:textColor="@color/accent"
                            android:textSize="12pt" />

                        <com.egnify.vignan.utils.p_MyCustomTextView_regular
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="@dimen/dimen8"
                            android:text="Total Classes "
                            android:textSize="12sp"

                            />
                    </LinearLayout>

                    <View
                        android:layout_width="0px"

                        android:layout_height="fill_parent"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_weight="0.002"
                        android:background="@color/tabsScrollColor" />


                    <LinearLayout
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.248"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.egnify.vignan.utils.p_MyCustomTextView_bold
                            android:id="@+id/present_m"
                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/dimen8"
                            android:paddingRight="@dimen/dimen8"
                            android:text="0"
                            android:textColor="@color/b2"
                            android:textSize="12pt" />

                        <com.egnify.vignan.utils.p_MyCustomTextView_regular
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="@dimen/dimen8"
                            android:text="Present Classes "
                            android:textSize="12sp"

                            />
                    </LinearLayout>

                    <View
                        android:layout_width="0px"

                        android:layout_height="fill_parent"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_weight="0.002"
                        android:background="@color/tabsScrollColor" />

                    <LinearLayout
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.248"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.egnify.vignan.utils.p_MyCustomTextView_bold
                            android:id="@+id/absent_m"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/dimen8"
                            android:paddingRight="@dimen/dimen8"
                            android:text="0"
                            android:textColor="@color/colorPrimary"
                            android:textSize="12pt" />

                        <com.egnify.vignan.utils.p_MyCustomTextView_regular
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="@dimen/dimen8"
                            android:text="Absent Classes "
                            android:textSize="12sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="0px"
                        android:layout_height="fill_parent"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_weight="0.002"
                        android:background="@color/tabsScrollColor" />

                    <LinearLayout
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.egnify.vignan.utils.p_MyCustomTextView_bold
                            android:id="@+id/s_per_m"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/dimen8"
                            android:paddingRight="@dimen/dimen8"
                            android:text="0"
                            android:textColor="@color/accent"
                            android:textSize="12pt" />

                        <com.egnify.vignan.utils.p_MyCustomTextView_regular
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="@dimen/dimen8"
                            android:text="Present %"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/bottom_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/testwise"
            android:visibility="invisible">

            <android.support.design.widget.TabLayout
                android:id="@+id/htab_tabs"
                style="@style/TabLayout_Theme"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_gravity="bottom"
                app:tabIndicatorColor="@android:color/white"
                app:tabMode="fixed"

                app:tabSelectedTextColor="@color/white"
                app:tabTextColor="@color/gray" />

            <android.support.v4.view.ViewPager
                android:id="@+id/htab_viewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/htab_tabs"
                app:layout_behavior="@string/appbar_scrolling_view_behavior" />
        </RelativeLayout>
    </RelativeLayout>
</FrameLayout>

