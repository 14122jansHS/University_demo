<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen8"
    android:background="@drawable/shadow_bg">
    <LinearLayout
        android:id="@+id/main_ll"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
       android:gravity="center_vertical"
        android:background="@color/white"
        android:orientation="horizontal">
        <com.github.siyamed.shapeimageview.CircularImageView
            android:id="@+id/fac_pic"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/place_holder" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <com.egnify.vignan.utils.p_MyCustomTextView_regular
                android:id="@+id/fac_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen8"
                android:singleLine="true"
                android:text="Ramesh"
                android:textColor="@color/primary_text"
                android:textSize="18sp" />

            <com.egnify.vignan.utils.p_MyCustomTextView
                android:id="@+id/pro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimen8"
                android:text="Asst.Prof"
                android:textColor="@color/secondary_text"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/bg_col"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:background="@color/yellow">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:orientation="vertical">

            <com.egnify.vignan.utils.p_MyCustomTextView_mbold
                android:id="@+id/marks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="120"
                android:textColor="@color/white"
                android:textSize="32sp" />

            <com.egnify.vignan.utils.p_MyCustomTextView_regular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="POINTS"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/marks"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:id="@+id/b_line"
        android:layout_width="fill_parent"
        android:layout_height="4dp"
        android:layout_below="@+id/main_ll"
        android:background="@color/yellow" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/shadow_fac" />
</RelativeLayout>